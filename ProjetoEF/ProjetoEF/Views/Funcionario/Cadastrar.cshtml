@model ProjetoEF.Models.Funcionario

@{
    ViewData["Title"] = "Cadastrar";
}

<h2>Cadastro de Funcionários</h2>
<hr />



<div class="container">


    <form class="form-horizontal" asp-controller="Funcionario" asp-action="Salvar" method="post">
        <input type="hidden" asp-for="id"  />

        <div class="form-group">
            <label for="nome" asp-for="nome">Nome</label>
            <input type="text" asp-for="nome" class="form-control" id="nome" placeholder="Nome" />
        </div>

        <div class="form-group">
            <label for="salario" asp-for="salario">Salário</label>
            <input type="number" asp-for="salario" class="form-control" id="salario" />
        </div>

        <div class="form-group">
            <label for="cpf" asp-for="cpf">CPF</label>
            <input type="text" asp-for="cpf" class="form-control" id="cpf" />
        </div>

        <button type="submit" class="btn btn-success">Cadastrar</button>
    </form>

</div>
